<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pager.City_TourFragment">

    <Button
        android:id="@+id/btnBeginCity"
        style="@style/Widget.Material3.Button.TextButton.Dialog.Icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalize->"
        android:textColor="#0A1823"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="591dp"
        app:layout_constraintTop_toBottomOf="@+id/resView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resView"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBeginCity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/list_of_adventure" />
</androidx.constraintlayout.widget.ConstraintLayout>